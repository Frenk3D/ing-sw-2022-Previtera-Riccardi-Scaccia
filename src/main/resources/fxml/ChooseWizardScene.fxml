<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DisplacementMap?>
<?import javafx.scene.effect.FloatMap?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.RadialGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.view.gui.scene.ChooseWizardSceneController">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="15.0">
         <children>
            <Label prefHeight="41.0" prefWidth="350.0" text="Choose a wizard from the available:">
               <textFill>
                  <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
                     <stops>
                        <Stop>
                           <color>
                              <Color red="0.9200000166893005" green="0.09602225571870804" blue="0.04600000008940697" />
                           </color>
                        </Stop>
                        <Stop offset="1.0">
                           <color>
                              <Color red="0.9200000166893005" green="0.04600000008940697" blue="0.04600000008940697" opacity="0.5699999928474426" />
                           </color>
                        </Stop>
                     </stops>
                  </RadialGradient>
               </textFill>
               <font>
                  <Font name="Times Roman" size="21.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0" styleClass="imageView" stylesheets="@../css/login-scene.css">
               <children>
                  <ImageView fx:id="oldWizardImgView" disable="true" fitHeight="300.0" fitWidth="250.0" preserveRatio="true">
                     <image>
                        <Image url="@../images/MAGO1_1.jpg" />
                     </image>
                     <effect>
                        <DisplacementMap wrap="true">
                           <mapData>
                              <FloatMap />
                           </mapData>
                        </DisplacementMap>
                     </effect>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ImageView>
                  <ImageView fx:id="kingWizardImgView" disable="true" fitHeight="300.0" fitWidth="250.0" preserveRatio="true">
                     <image>
                        <Image url="@../images/MAGO2_1.jpg" />
                     </image>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ImageView>
                  <ImageView fx:id="girlWizardImgView" disable="true" fitHeight="300.0" fitWidth="250.0" preserveRatio="true">
                     <image>
                        <Image url="@../images/MAGO3_1_correzioni.jpg" />
                     </image>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ImageView>
                  <ImageView fx:id="asiaticWizardImgView" disable="true" fitHeight="300.0" fitWidth="250.0" preserveRatio="true">
                     <image>
                        <Image url="@../images/MAGO4_1.jpg" />
                     </image>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ImageView>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
